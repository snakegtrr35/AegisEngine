//=============================================================================
// ピクセルシェーダ
//=============================================================================
//[earlydepthstencil]
void main(PS_IN_SHADOW Input,

		  out float4 outDepth       : SV_Target)
{ 
    float depthValue = Input.Pos.z / Input.Pos.w;
    
    outDepth = float4(depthValue, 0.0, 0.0, 1.0);
}